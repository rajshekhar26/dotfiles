#!/bin/sh

background="$(xrdb ~/.config/x11/xresources -query all | grep background | cut -f2)"
foreground="$(xrdb ~/.config/x11/xresources -query all | grep foreground | cut -f2)"
accent="$(xrdb ~/.config/x11/xresources -query all | grep color4 | cut -f2)"

greenclip print | grep . | dmenu -i -fn "FantasqueSansM Nerd Font Mono-16" \
	-nb "$background" -nf "$foreground" -sb "$accent" -sf "$background" \
	-i -l 10 -p clipboard | xargs -r -d'\n' -I '{}' greenclip print '{}'
