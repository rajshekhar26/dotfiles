#!/usr/bin/env bash

export background=$(xrdb ~/.config/x11/xresources -query all | grep color0 | cut -f2)
export foreground=$(xrdb ~/.config/x11/xresources -query all | grep foreground | cut -f2)
export color5=$(xrdb ~/.config/x11/xresources -query all | grep color5 | cut -f2)

greenclip print | grep . | dmenu -i -fn "SpaceMono Nerd Font Mono-15" \
    -nb "$background" -nf "$foreground" -sb "$color5" -sf "$background" \
    -i -l 10 -p clipboard | xargs -r -d'\n' -I '{}' greenclip print '{}'
